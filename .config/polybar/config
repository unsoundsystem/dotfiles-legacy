[module/network]
	type          = internal/network
	interface     = wlp2s0
	ping-interval = 3

[module/xwindow]
	y-offset      = 10
	type          = internal/xwindow
	format        = <label>
	label         = %title:0:50:%
	label-padding = 3
[module/date]
	type     = internal/date
	interval = 1.0
	time     = "%Y/%m/%d %a %I:%M %p"
	label    = "%time%"

	format         = <label>
	format-padding = 0

	label-background = #FF2B303B
	label-foreground = #FFFFFFFF
	label-padding    = 4

